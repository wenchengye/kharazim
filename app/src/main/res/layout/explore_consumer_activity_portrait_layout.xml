<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/explore_consumer_activity_header"
        layout="@layout/explore_header_bg_view"/>

    <VideoView
        android:id="@+id/explore_consumer_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/explore_consumer_activity_header"/>

    <com.heqi.kharazim.consume.view.ConsumerViewImpl
        android:id="@+id/explore_portrait_consumer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/explore_consumer_video_view">

        <FrameLayout
            android:id="@+id/consumer_view_guide_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/consume_guide_layout_bg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="33dp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_micro"
                android:text="@string/consumer_guide_label_text"/>

            <com.heqi.kharazim.explore.view.ExploreCircleProgressView
                android:id="@+id/consumer_guide_progress"
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_gravity="center"
                app:upperMinorText="@string/consumer_progress_guide_upper_text"
                app:lowerMinorText="@string/consumer_progress_guide_lower_text"/>

            <TextView
                android:id="@+id/consumer_skip_guide_btn"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="37dp"
                android:text="@string/consumer_skip_guide_label_text"
                style="@style/explore_large_btn"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/consumer_view_normal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/consumer_view_control_layout"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_alignParentBottom="true"
                android:background="@color/explore_layout_bg_light_gray">

                <ImageView
                    android:id="@+id/consumer_backward_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/consumer_portrait_control_layout_margin_horizontal"
                    android:layout_marginStart="@dimen/consumer_portrait_control_layout_margin_horizontal"
                    android:src="@drawable/icon_consumer_portrait_backward"/>

                <ImageView
                    android:id="@+id/consumer_play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_consumer_portrait_pause"/>

                <ImageView
                    android:id="@+id/consumer_forward_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/consumer_portrait_control_layout_margin_horizontal"
                    android:layout_marginRight="@dimen/consumer_portrait_control_layout_margin_horizontal"
                    android:src="@drawable/icon_consumer_portrait_forward"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/consumer_view_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/consumer_view_control_layout"
                android:background="@color/explore_layout_bg_dark_gray">

                <com.heqi.kharazim.explore.view.ExploreCircleProgressView
                    android:id="@+id/consumer_repeat_progress"
                    android:layout_width="@dimen/consumer_portrait_progress_view_size"
                    android:layout_height="@dimen/consumer_portrait_progress_view_size"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="@dimen/consumer_portrait_info_layout_margin_horizontal"
                    android:layout_marginStart="@dimen/consumer_portrait_info_layout_margin_horizontal"
                    android:layout_marginTop="@dimen/consumer_portrait_info_layout_margin_top"
                    />

                <com.heqi.kharazim.explore.view.ExploreCircleProgressView
                    android:id="@+id/consumer_duration_progress"
                    android:layout_width="@dimen/consumer_portrait_progress_view_size"
                    android:layout_height="@dimen/consumer_portrait_progress_view_size"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="@dimen/consumer_portrait_info_layout_margin_horizontal"
                    android:layout_marginRight="@dimen/consumer_portrait_info_layout_margin_horizontal"
                    android:layout_marginTop="@dimen/consumer_portrait_info_layout_margin_top"
                    />

                <TextView
                    android:id="@+id/consumer_interpretation_button"
                    style="@style/explore_large_btn"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/consumer_portrait_info_layout_margin_bottom"
                    android:text="@string/consumer_interpretation_text"/>

            </FrameLayout>
        </RelativeLayout>
    </com.heqi.kharazim.consume.view.ConsumerViewImpl>

    <com.heqi.kharazim.consume.view.ConsumerPauseViewImpl
        android:id="@+id/consumer_pause_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/consume_interpretation_bg_color">

        <TextView
            android:id="@+id/consumer_pause_view_content_tv_1"
            android:layout_marginTop="59dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/consumer_pause_content_text_1"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_pause_view_content_tv_2"
            android:layout_below="@id/consumer_pause_view_content_tv_1"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/consumer_pause_content_text_2"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_pause_view_content_tv_3"
            android:layout_below="@id/consumer_pause_view_content_tv_2"
            android:layout_marginTop="19dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/consumer_pause_content_text_3"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_pause_view_content_tv_4"
            android:layout_below="@id/consumer_pause_view_content_tv_3"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/consumer_pause_content_text_4"
            style="@style/simple_tv"/>
        
        <com.heqi.image.view.AsyncImageView
            android:id="@+id/consumer_pause_view_action_iv"
            android:layout_width="165dp"
            android:layout_height="93dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/consumer_pause_view_content_tv_4"
            android:layout_marginTop="47dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/consumer_pause_view_interpretation_btn"
            android:layout_below="@id/consumer_pause_view_action_iv"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="@string/consumer_interpretation_text"
            style="@style/explore_middle_btn"/>

        <ImageView
            android:id="@+id/consumer_pause_view_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:src="@drawable/icon_consumer_portrait_play"/>

        <SeekBar
            android:id="@+id/consumer_pause_view_sound_volume_seekbar"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/consumer_pause_view_play_btn"
            android:layout_marginBottom="55dp"
            android:layout_centerHorizontal="true"
            android:maxHeight="1.5dp"
            android:minHeight="1.5dp"
            android:progressDrawable="@drawable/layer_consumer_volume"
            />

        <TextView
            android:id="@+id/consumer_pause_view_sound_volume_label"
            android:layout_above="@id/consumer_pause_view_sound_volume_seekbar"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_xtiny"
            android:textColor="@color/kharazim_design_color"
            android:text="@string/consumer_pause_sound_volume_label_text"
            style="@style/simple_tv"/>

        <SeekBar
            android:id="@+id/consumer_pause_view_music_volume_seekbar"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/consumer_pause_view_sound_volume_label"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:maxHeight="1.5dp"
            android:minHeight="1.5dp"
            android:progressDrawable="@drawable/layer_consumer_volume"
            />

        <TextView
            android:id="@+id/consumer_pause_view_music_volume_label"
            android:layout_above="@id/consumer_pause_view_music_volume_seekbar"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_xtiny"
            android:textColor="@color/kharazim_design_color"
            android:text="@string/consumer_pause_music_volume_label_text"
            style="@style/simple_tv"/>

    </com.heqi.kharazim.consume.view.ConsumerPauseViewImpl>

    <FrameLayout
        android:id="@+id/consumer_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <com.heqi.kharazim.consume.view.ConsumeGiveUpView
        android:id="@+id/consumer_give_up_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/consume_give_up_shadow_bg">

        <RelativeLayout
            android:layout_width="177dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true"
            android:background="@color/consume_give_up_bg_color">

            <ImageView
                android:id="@+id/consumer_give_up_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_consumer_give_up_logo"
                />

            <TextView
                android:id="@+id/consumer_give_up_content_tv_1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/consumer_give_up_logo"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_micro"
                android:text="@string/consumer_give_up_content_text_1"
                style="@style/simple_tv"/>

            <TextView
                android:id="@+id/consumer_give_up_content_tv_2"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/consumer_give_up_content_tv_1"
                android:layout_marginTop="7dp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/consumer_give_up_content_text_2"
                style="@style/simple_tv"/>

            <View
                android:id="@+id/consumer_give_up_divider_1"
                android:layout_width="match_parent"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="12dp"
                android:layout_below="@id/consumer_give_up_content_tv_2"
                style="@style/gray_divider_horizontal"
                />
            
            <TextView
                android:id="@+id/consumer_give_up_progress_time_upper_text"
                android:layout_below="@id/consumer_give_up_divider_1"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_time_minute_upper_text"
                style="@style/simple_tv"/>

            <TextView
                android:id="@+id/consumer_give_up_progress_time_tv"
                android:layout_below="@id/consumer_give_up_progress_time_upper_text"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/consumer_give_up_progress_time_upper_text"
                android:layout_alignStart="@id/consumer_give_up_progress_time_upper_text"
                android:textColor="@color/kharazim_design_color"
                android:textSize="@dimen/text_size_large"
                style="@style/simple_tv"/>

            <TextView
                android:id="@+id/consumer_give_up_progress_time_lower_text"
                android:layout_below="@id/consumer_give_up_progress_time_tv"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/consumer_give_up_progress_time_upper_text"
                android:layout_alignStart="@id/consumer_give_up_progress_time_upper_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_time_minute_lower_text"
                style="@style/simple_tv"/>

            <TextView
                android:id="@+id/consumer_give_up_count_upper_text"
                android:layout_alignTop="@id/consumer_give_up_progress_time_upper_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="33dp"
                android:layout_marginEnd="33dp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_acupoint_upper_text"
                style="@style/simple_tv"/>

            <TextView
                android:id="@+id/consumer_give_up_count_tv"
                android:layout_alignTop="@id/consumer_give_up_progress_time_tv"
                android:layout_alignLeft="@id/consumer_give_up_count_upper_text"
                android:layout_alignStart="@id/consumer_give_up_count_upper_text"
                android:textColor="@color/kharazim_design_color"
                android:textSize="@dimen/text_size_large"
                style="@style/simple_tv"/>

            <TextView
                android:id="@+id/consumer_give_up_count_lower_text"
                android:layout_alignTop="@id/consumer_give_up_progress_time_lower_text"
                android:layout_alignLeft="@id/consumer_give_up_count_upper_text"
                android:layout_alignStart="@id/consumer_give_up_count_upper_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_acupoint_lower_text"
                style="@style/simple_tv"/>

            <View
                android:id="@+id/consumer_give_up_divider_2"
                android:layout_width="match_parent"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="12dp"
                android:layout_below="@id/consumer_give_up_progress_time_lower_text"
                style="@style/gray_divider_horizontal"
                />

            <TextView
                android:id="@+id/consumer_give_up_confirm_btn"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:text="@string/confirm"
                style="@style/explore_middle_btn"/>

        </RelativeLayout>

    </com.heqi.kharazim.consume.view.ConsumeGiveUpView>

    <com.heqi.kharazim.consume.view.ConsumeFinishView
        android:id="@+id/consumer_finish_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/consume_interpretation_bg_color">

        <TextView
            android:id="@+id/consumer_finish_view_confirm_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:layout_centerHorizontal="true"
            android:text="@string/confirm"
            style="@style/explore_large_btn"/>

        <FrameLayout
            android:id="@+id/consumer_finish_view_star_view_holder"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/consumer_finish_view_confirm_btn"
            android:layout_marginBottom="38dp"
            android:layout_centerHorizontal="true">

        </FrameLayout>

        <TextView
            android:id="@+id/consumer_finish_view_star_view_label"
            android:layout_above="@id/consumer_finish_view_star_view_holder"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_xtiny"
            android:textColor="@color/text_color_white"
            android:text="@string/consumer_finish_star_label_text"
            style="@style/simple_tv"/>

        <View
            android:id="@+id/consumer_finish_view_divider_1"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_above="@id/consumer_finish_view_star_view_label"
            android:layout_marginBottom="20dp"
            style="@style/gray_divider_horizontal"
            />

        <com.heqi.kharazim.ui.view.ContentListView
            android:id="@+id/consumer_finish_view_acupoint_list_view"
            android:layout_width="114dp"
            android:layout_height="81dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/consumer_finish_view_divider_1"
            android:layout_marginBottom="10dp"
            android:cacheColorHint="@android:color/transparent"
            style="@style/list_view"/>

        <View
            android:id="@+id/consumer_finish_view_divider_2"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_above="@id/consumer_finish_view_acupoint_list_view"
            android:layout_marginBottom="10dp"
            style="@style/gray_divider_horizontal"
            />

        <TextView
            android:id="@+id/consumer_finish_view_progress_time_lower_text"
            android:layout_above="@id/consumer_finish_view_divider_2"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_time_minute_lower_text"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_progress_time_tv"
            android:layout_above="@id/consumer_finish_view_progress_time_lower_text"
            android:layout_marginBottom="15dp"
            android:layout_alignLeft="@id/consumer_finish_view_progress_time_lower_text"
            android:layout_alignStart="@id/consumer_finish_view_progress_time_lower_text"
            android:textColor="@color/kharazim_design_color"
            android:textSize="@dimen/text_size_large"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_progress_time_upper_text"
            android:layout_above="@id/consumer_finish_view_progress_time_tv"
            android:layout_marginBottom="15dp"
            android:layout_alignLeft="@id/consumer_finish_view_progress_time_lower_text"
            android:layout_alignStart="@id/consumer_finish_view_progress_time_lower_text"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_time_minute_upper_text"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_kharazim_point_lower_text"
            android:layout_alignTop="@id/consumer_finish_view_progress_time_lower_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_kharazim_point_unit_text"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_kharazim_point_tv"
            android:layout_alignTop="@id/consumer_finish_view_progress_time_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/kharazim_design_color"
            android:textSize="@dimen/text_size_large"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_kharazim_point_upper_text"
            android:layout_alignTop="@id/consumer_finish_view_progress_time_upper_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_kharazim_point_label_text"
            style="@style/simple_tv"/>


        <TextView
            android:id="@+id/consumer_finish_view_count_lower_text"
            android:layout_alignTop="@id/consumer_finish_view_progress_time_lower_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_acupoint_lower_text"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_count_tv"
            android:layout_alignTop="@id/consumer_finish_view_progress_time_tv"
            android:layout_alignLeft="@id/consumer_finish_view_count_lower_text"
            android:layout_alignStart="@id/consumer_finish_view_count_lower_text"
            android:textColor="@color/kharazim_design_color"
            android:textSize="@dimen/text_size_large"
            style="@style/simple_tv"/>

        <TextView
            android:id="@+id/consumer_finish_view_count_upper_text"
            android:layout_alignTop="@id/consumer_finish_view_progress_time_upper_text"
            android:layout_alignLeft="@id/consumer_finish_view_count_lower_text"
            android:layout_alignStart="@id/consumer_finish_view_count_lower_text"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_acupoint_upper_text"
            style="@style/simple_tv"/>

        <View
            android:id="@+id/consumer_finish_view_divider_3"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_above="@id/consumer_finish_view_progress_time_upper_text"
            android:layout_marginBottom="20dp"
            style="@style/gray_divider_horizontal"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/consumer_finish_view_divider_3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_kharazim_image_logo"/>
        </FrameLayout>

    </com.heqi.kharazim.consume.view.ConsumeFinishView>
</RelativeLayout>