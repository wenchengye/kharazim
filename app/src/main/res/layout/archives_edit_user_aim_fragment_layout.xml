<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/archives_edit_user_aim_header"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/kharazim_design_color">

        <TextView
            android:id="@+id/archives_edit_user_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:text="@string/archives_edit_user_aim_title"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_small"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/archives_edit_user_aim_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/archives_edit_user_aim_header"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/archives_edit_user_aim_commit_button"
        style="@style/explore_middle_btn"
        android:layout_below="@id/archives_edit_user_aim_content_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/archives_edit_user_aim_commit_text"/>

</RelativeLayout>