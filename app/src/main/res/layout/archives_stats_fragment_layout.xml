<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include android:id="@+id/archives_stats_header"
             layout="@layout/explore_header_bg_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/archives_stats_day_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_stats_day_filter_label_text"/>

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/archives_stats_week_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_stats_week_filter_label_text"/>

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/archives_stats_month_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_stats_month_filter_label_text"/>

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/archives_stats_all_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_stats_all_filter_label_text"/>

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:background="@color/explore_layout_bg_dark_gray">
        
        <TextView
            android:id="@+id/archives_stats_detail_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_xtiny"/>

        <TextView
            android:id="@+id/archives_stats_detail_time_minutes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/kharazim_desgin_color"
            android:textSize="@dimen/text_size_xxhuge"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/archives_stats_detail_time_minutes_tv"
            android:layout_toEndOf="@+id/archives_stats_detail_time_minutes_tv"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_xtiny"
            android:text="@string/archives_user_progress_time_minute_lower_text"/>
        
        <LinearLayout
            android:layout_width="@dimen/archives_stats_detail_right_content_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_count_upper_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_time_continue_day_upper_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_time_day_upper_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_kharazim_point_label_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/archives_stats_detail_right_content_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_count_lower_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_time_continue_day_lower_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_time_day_lower_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_xtiny"
                android:text="@string/archives_user_progress_kharazim_point_unit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/archives_stats_detail_right_content_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView android:id="@+id/archives_stats_detail_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/kharazim_desgin_color"
                android:textSize="@dimen/text_size_large"/>

            <TextView android:id="@+id/archives_stats_detail_continue_day_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:textColor="@color/kharazim_desgin_color"
                      android:textSize="@dimen/text_size_large"/>

            <TextView android:id="@+id/archives_stats_detail_day_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:textColor="@color/kharazim_desgin_color"
                      android:textSize="@dimen/text_size_large"/>

            <TextView android:id="@+id/archives_stats_detail_kharazim_point_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:textColor="@color/kharazim_desgin_color"
                      android:textSize="@dimen/text_size_large"/>
        </LinearLayout>

    </RelativeLayout>

    <com.heqi.kharazim.ui.view.ContentListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        style="@style/list_view"/>

</LinearLayout>