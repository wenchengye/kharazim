<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="54dp"
             android:background="@color/kharazim_design_color">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_explore_header"
        />
    <ImageView
        android:id="@+id/explore_header_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom|start"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"/>
    <ImageView
        android:id="@+id/explore_header_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom|end"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"/>
</FrameLayout>