<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_view">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="tab_strip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dropdown_item_height</item>
        <item name="android:background">@color/text_color_white</item>
        <item name="dividerColor">@color/transparent</item>
        <item name="dividerPadding">0dp</item>
        <item name="tabPaddingLeftRight">15dp</item>
        <item name="tabBackground">@drawable/bg_tab_item</item>
        <item name="shouldExpand">true</item>
        <item name="tabTextSize">@dimen/text_size_large</item>
        <item name="tabTextColor">#ffffff</item>
        <item name="indicatorColor">#000000</item>
        <item name="indicatorHeight">4dp</item>
        <item name="underlineHeight">0dp</item>
    </style>

    <style name="top_shadow">
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_explore_bar_shadow</item>
    </style>

    <style name="simple_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="dark_divider_horizontal">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/explore_black_divider_color</item>
    </style>

    <style name="gray_divider_horizontal">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/explore_gray_divider_color</item>
    </style>

    <!-- explore -->
    <style name="explore_plan_lite_intro_tv" parent="@style/simple_tv">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_xtiny</item>
    </style>

    <style name="explore_difficulty_level_item">
        <item name="android:layout_height">@dimen/explore_difficulty_level_view_height</item>
        <item name="android:layout_width">@dimen/explore_difficulty_level_view_item_width</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/explore_difficulty_level_view_item_disable</item>
    </style>

    <style name="explore_course_card_tv" parent="@style/simple_tv">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="explore_large_btn">
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_width">178dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:background">@drawable/bg_explore_large_button</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="explore_middle_btn">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">135dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_explore_middle_button</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_xtiny</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- archives -->
    <style name="archives_login_action_btn">
        <item name="android:layout_width">@dimen/archives_login_action_btn_width</item>
        <item name="android:layout_height">@dimen/archives_login_action_btn_height</item>
        <item name="android:background">@drawable/bg_archives_login_action</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="archives_input_layout">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/bg_archives_login_input</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="archives_input_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>
    <style name="archives_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textColorHint">@color/archives_login_input_hint_text_color</item>
        <item name="android:textSize">@dimen/text_size_xtiny</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="archives_settings_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/archives_settings_divider_height</item>
        <item name="android:background">@color/explore_layout_bg_dark_gray</item>
    </style>

    <style name="archives_settings_item_arrow_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:src">@drawable/icon_archives_settings_item_arrow</item>
    </style>
    
    <style name="archives_settings_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@color/bg_color_white</item>
    </style>

    <style name="archives_settings_item_title_style" parent="simple_tv">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginStart">27dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="archives_settings_slash_style" parent="dark_divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

</resources>
