<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_view">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="tab_strip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dropdown_item_height</item>
        <item name="android:background">@color/text_color_white</item>
        <item name="dividerColor">@color/transparent</item>
        <item name="dividerPadding">0dp</item>
        <item name="tabPaddingLeftRight">15dp</item>
        <item name="tabBackground">@drawable/bg_tab_item</item>
        <item name="shouldExpand">true</item>
        <item name="tabTextSize">@dimen/text_size_large</item>
        <item name="tabTextColor">#ffffff</item>
        <item name="indicatorColor">#000000</item>
        <item name="indicatorHeight">4dp</item>
        <item name="underlineHeight">0dp</item>
    </style>

    <style name="top_shadow">
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_explore_bar_shadow</item>
    </style>

</resources>
